<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/activity_main_countdown_textview"
        android:layout_width="258dp"
        android:layout_height="141dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="@string/activity_main_countdown_textview_text"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_main_start_button"
        android:layout_width="94dp"
        android:layout_height="53dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="32dp"
        android:onClick="startBtnClicked"
        android:text="@string/activity_main_start_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_countdown_textview" />

    <Button
        android:id="@+id/activity_main_stop_button"
        android:layout_width="94dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="76dp"
        android:onClick="stopBtnClicked"
        android:text="@string/activity_main_stop_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/activity_main_start_button"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_countdown_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>