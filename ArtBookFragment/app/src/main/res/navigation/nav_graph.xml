<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.tolgaalperkus.artbookfragment.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_itemFragment"
            app:destination="@id/itemFragment" >
        </action>
    </fragment>
    <fragment
        android:id="@+id/itemFragment"
        android:name="com.tolgaalperkus.artbookfragment.ItemFragment"
        android:label="fragment_item"
        tools:layout="@layout/fragment_item" >
        <action
            android:id="@+id/action_itemFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="Info"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_itemFragment_self"
            app:destination="@id/itemFragment" />
        <argument
            android:name="ArtId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
</navigation>